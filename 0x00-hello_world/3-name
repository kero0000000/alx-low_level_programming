#!/bin/bash
# Check if $CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "Error: C file not specified. Set the CFILE variable with the C file name."
    exit 1
fi

# Compile the C file and create an executable named cisfun
gcc "$CFILE" -o cisfun

# Check if compilation was successful
if [ $? -eq 0 ]; then
    echo "Compilation successful. Executable 'cisfun' created."
else
    echo "Compilation failed."
fi

